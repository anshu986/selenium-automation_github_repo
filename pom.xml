		</license>
	</licenses>
	<prerequisites>
		<maven>3.0.3</maven>
	</prerequisites>
	<scm>
		<connection>scm:git:https://github.com/licanhua/selenium-automation.git</connection>
		<developerConnection>scm:git:git@github.com:licanhua/selenium-automation.git</developerConnection>
